{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/gamess": {
      "post": {
        "summary": "Get result of game",
        "tags": [
          "Game"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "option",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Game",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "string"
                    },
                    "player_option": {
                      "type": "string"
                    },
                    "computer_option": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "result",
                    "player_option",
                    "computer_option"
                  ]
                }
              }
            },
            "examples": {
              "application/json": {
                "data": {
                  "result": "Player is winner",
                  "player_option": "rock",
                  "computer_option": "scissors"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable",
            "examples": {
              "application/json": {
                "message": "Your option is invalid, please use rules for more information"
              }
            }
          }
        }
      }
    }
  }
}